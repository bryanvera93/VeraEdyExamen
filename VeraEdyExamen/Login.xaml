<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="VeraEdyExamen.Login">
    <ContentPage.Content >
            <Grid>
                <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
                <BoxView Color="BlanchedAlmond" Opacity="0.5"/>
           
        <StackLayout Grid.Row="1" Padding="30,20" > 
            
        <Frame BackgroundColor="#2196F3" Padding="20" CornerRadius="0">
            <Label Text="LOGIN" HorizontalTextAlignment="Center" TextColor="White" FontSize="28" />
        </Frame>


        <Entry x:Name="txtuser"
               Placeholder="Ingrese el usuario">
               </Entry>
        <Entry x:Name="txtpass"
               Placeholder="Ingrese la contraseña"
               IsPassword="True"></Entry>



        <Button x:Name="btnAbrir_registro"
                Text="Iniciar Sesion"
                BackgroundColor="LightPink"
                TextColor="Black"
                CornerRadius="60"
               
                Clicked="btnAbrir_registro_Clicked">

        </Button>


   

    </StackLayout>
      </Grid>
    </ContentPage.Content>
</ContentPage>
